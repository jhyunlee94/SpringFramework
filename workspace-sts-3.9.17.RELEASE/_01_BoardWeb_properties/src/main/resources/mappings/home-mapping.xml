<?xml version="1.0" encoding="UTF-8" ?>

<!-- doctype mapper로 설정 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<!-- mapper namesapce 지정 -->
<!-- 기존 JDBC 프로그래밍에서 DAO에 클래스에 쿼리를 작성함 -->
<!-- DAO에서 쿼리가 분리되었기 때문에 DAO클래스 이름을 따라감 -->
<mapper namespace="HomeDAO">
	<!-- 쿼리 작성 영역 -->
	<!-- 
	<select id=""></select>
	<insert id=""></insert>
	<update id=""></update>
	<delete id=""></delete>
	 -->
	<!-- com.spring.boardweb.HomeVO -> home (home-mapping) 별칭 -->
	<!-- <![CDATA[]]>  감싸줘서 부등호로 인식시켜줌-->
	<!-- mapper에는 절대 ;(세미클론) 찍지 않는다. -->
	<select id="getNameList" resultType="home"> <!-- parameterType="" 지정가능 -->
		<![CDATA[
			SELECT *
				FROM T_NAME
		]]>
	</select>
</mapper>